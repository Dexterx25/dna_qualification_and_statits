{
  "name": "test_app",
  "version": "1.0.0",
  "description": "This is the backend proyect to nextTo Aplication desktop and movile",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nodemon --config nodemon-debug.json --inspect",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config ./orm.config.json",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/alicanto-backend/test/jest-e2e.json",
    "typeorm:migration:generate": "rimraf migrations && npm run typeorm -- migration:generate -n",
    "typeorm:migration:run": "npm run typeorm -- migration:run",
    "typeorm:migration:revert": "npm run typeorm -- migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mongoose": "^9.0.0",
    "@nestjs/passport": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/schedule": "^3.0.4",
    "@nestjs/swagger": "^7.1.12",
    "@nestjs/typeorm": "^9.0.0",
    "@types/passport-local": "^1.0.34",
    "atob": "^2.1.2",
    "btoa": "^1.2.1",
    "canvg": "^3.0.7",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "core-js": "^3.13.0",
    "cron": "^1.8.2",
    "cross-fetch": "^3.1.4",
    "dayjs": "^1.10.4",
    "dompurify": "^2.2.8",
    "express-basic-auth": "^1.2.0",
    "fastify-static": "^4.5.0",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^6.5.2",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "tedis": "^0.1.12",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/node": "^16.0.0",
    "@types/passport": "^1.0.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/migrations/"
    ],
    "moduleNameMapper": {
      "@app/aws/(.*)": "<rootDir>/libs/aws/$1",
      "@src/aws": "<rootDir>/libs/aws/",
      "@app/database/(.*)": "<rootDir>/src/database/$1",
      "@src/database": "<rootDir>/src/database/",
      "@src/guards/(.*)": "<rootDir>/libs/guards/$1",
      "@src/guards": "<rootDir>/libs/guards/src",
      "@src/middlewares/(.*)": "<rootDir>/libs/middlewares/src/$1",
      "@src/middlewares": "<rootDir>/libs/middlewares/src",
      "@src/mocks/(.*)": "<rootDir>/libs/mocks/src/$1",
      "@src/mocks": "<rootDir>/libs/mocks/src",
      "@src/structures/(.*)": "<rootDir>/libs/structures/src/$1",
      "@src/structures": "<rootDir>/libs/structures/src",
      "@src/utils": "<rootDir>/libs/utils/src"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://dexterxLA@bitbucket.org/dexterxla/fenix_backend.git"
  },
  "author": "Lya-electronic develop Juan Blanco",
  "license": "MIT",
  "homepage": "https://bitbucket.org/dexterxla/fenix_backend#readme"
}
