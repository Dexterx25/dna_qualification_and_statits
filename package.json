{
  "name": "test_app",
  "version": "1.0.0",
  "description": "This is the backend test_app",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nodemon --config nodemon-debug.json --inspect",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --config ./orm.config.json",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/alicanto-backend/test/jest-e2e.json",
    "typeorm:migration:generate": "rimraf migrations && npm run typeorm -- migration:generate -n",
    "typeorm:migration:run": "npm run typeorm -- migration:run",
    "typeorm:migration:revert": "npm run typeorm -- migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^7.5.1",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.5.1",
    "@nestjs/mongoose": "^7.2.4",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/schedule": "^0.4.3",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/typeorm": "^7.1.5",
    "@types/mongoose": "^5.11.97",
    "atob": "^2.1.2",
    "btoa": "^1.2.1",
    "canvg": "^3.0.7",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dompurify": "^2.2.8",
    "express-basic-auth": "^1.2.0",
    "fastify-static": "^4.5.0",
    "mongodb-memory-server": "^8.15.1",
    "mongoose": "^5.12.13",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6",
    "tedis": "^0.1.12",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lodash": "^4.14.170",
    "@types/node": "^14.14.6",
    "@types/passport": "^1.0.7",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/tests"
    ],
    "moduleNameMapper": {
      "@app/aws/(.*)": "<rootDir>/libs/aws/$1",
      "@src/aws": "<rootDir>/libs/aws/",
      "@app/database/(.*)": "<rootDir>/src/database/$1",
      "@src/database": "<rootDir>/src/database/",
      "@src/guards/(.*)": "<rootDir>/libs/guards/$1",
      "@src/guards": "<rootDir>/libs/guards/src",
      "@src/middlewares/(.*)": "<rootDir>/libs/middlewares/src/$1",
      "@src/middlewares": "<rootDir>/libs/middlewares/src",
      "@src/mocks/(.*)": "<rootDir>/libs/mocks/src/$1",
      "@src/mocks": "<rootDir>/libs/mocks/src",
      "@src/structures/(.*)": "<rootDir>/libs/structures/src/$1",
      "@src/structures": "<rootDir>/libs/structures/src",
      "@src/utils": "<rootDir>/libs/utils/src"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://dexterxLA@bitbucket.org/dexterxla/fenix_backend.git"
  },
  "author": "Lya-electronic develop Juan Blanco",
  "license": "MIT",
  "homepage": "https://bitbucket.org/dexterxla/fenix_backend#readme"
}
